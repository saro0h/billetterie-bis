{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Reservation success
{% endblock title %}

{% block top %}
    <section id="home">
        <div id="main-slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    <img class="img-responsive" src="{{ asset('bundles/app/images/slider/bg4.jpg') }}" alt="slider">
                </div>
            </div>
        </div>
    </section>
{% endblock top %}
{% block content %}
    <section id="explore">
        <div class="container">
            <div class="row">
               
                <div class="col-md-4 col-md-offset-2 col-sm-5">
                    <h2>Your reservation has been completed successfully. A confirmation email has been sent to your mail address</h2>
                </div>
                
            </div>
           
        </div>
    </section><!--/#explore-->
{% endblock content %}